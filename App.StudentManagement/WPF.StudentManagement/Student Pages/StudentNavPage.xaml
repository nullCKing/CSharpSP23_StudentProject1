<?xml version="1.0" encoding="utf-8" ?> 
<Page x:Class="WPF.StudentManagement.StudentNavPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:WPF.StudentManagement"
      mc:Ignorable="d"
      Title="Student Navigation Page">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Student Menu" FontWeight="Bold" FontSize="24" Margin="0,0,0,10" TextAlignment="Center"/>
            <TextBlock Text="Would you like to manage student data or course data?" FontSize="15" Margin="0,0,0,10" TextAlignment="Center"/>
            <Button Name="ViewCoursesButton" Content="View courses and grades" Click="PersonButton_Click" Margin="0,0,0,10"/>
            <Button Name="ViewGPAButton" Content="View GPA" Click="CourseButton_Click" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Page>