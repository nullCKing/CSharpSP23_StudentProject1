<Page x:Class="WPF.StudentManagement.InstructorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:WPF.StudentManagement"
      mc:Ignorable="d"
      Title="Instructor Page">
    <Grid x:Name="InstructorMenuContent" Visibility="Visible">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Frame x:Name="InstructorPageFrame" NavigationUIVisibility="Hidden" Visibility="Collapsed" Grid.Column="0" Grid.Row="0"/>
            <TextBlock Text="Main Menu" FontWeight="Bold" FontSize="24" Margin="0,0,0,10" TextAlignment="Center"/>
            <TextBlock Text="Would you like to manage student data or course data?" FontSize="15" Margin="0,0,0,10" TextAlignment="Center"/>
            <Button Name="PersonButton" Content="Student Data" Click="PersonButton_Click" Margin="0,0,0,10"/>
            <Button Name="CourseButton" Content="Course Data" Click="CourseButton_Click" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Page>