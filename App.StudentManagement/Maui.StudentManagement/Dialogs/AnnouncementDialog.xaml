<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.StudentManagement.Dialogs.AnnouncementDialog"
             Title="{Binding Title}">
    <StackLayout>
        <ListView ItemsSource="{Binding Course.Announcements}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Text="{Binding Headline}" VerticalOptions="Center" />
                            <Button Grid.Column="1" Text="Modify" WidthRequest="100" VerticalOptions="Center" HorizontalOptions="End"
                            Clicked="ModifyAnnouncements" CommandParameter="{Binding}" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Back" Clicked="BackButtonClicked" />
    </StackLayout>
</ContentPage>